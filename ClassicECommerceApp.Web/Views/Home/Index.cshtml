@{
    ViewData["Title"] = "Home Page";
}

<div class="tw-flex tw-flex-col tw-items-center tw-justify-center tw-max-w-7xl tw-mx-auto">

    <div class="tw-relative tw-w-full tw-max-w-7xl">
        <!-- Slides -->
        <div class="mySlides fade tw-hidden">
            <div class="numbertext tw-absolute tw-top-0 tw-px-3 tw-py-2 tw-text-xs tw-text-gray-200">1 / 3</div>
            <img src="https://www.w3schools.com/howto/img_nature_wide.jpg" class="tw-h-auto tw-w-128" />
            <div class="tw-absolute tw-bottom-4 tw-w-full tw-px-3 tw-py-2 tw-text-center tw-text-sm tw-text-gray-200">Caption Text</div>
        </div>

        <div class="mySlides fade tw-hidden">
            <div class="numbertext tw-absolute tw-top-0 tw-px-3 tw-py-2 tw-text-xs tw-text-gray-200">2 / 3</div>
            <img src="https://www.w3schools.com/howto/img_snow_wide.jpg" class="tw-w-128 tw-h-auto" />
            <div class="tw-absolute tw-bottom-4 tw-w-full tw-px-3 tw-py-2 tw-text-center tw-text-sm tw-text-gray-200">Caption Two</div>
        </div>

        <div class="mySlides fade tw-hidden">
            <div class="numbertext tw-absolute tw-top-0 tw-px-3 tw-py-2 tw-text-xs tw-text-gray-200">3 / 3</div>
            <img src="https://www.w3schools.com/howto/img_lights_wide.jpg" class="tw-w-128 tw-h-auto" />
            <div class="tw-absolute tw-bottom-4 tw-w-full tw-px-3 tw-py-2 tw-text-center tw-text-sm tw-text-gray-200">Caption Three</div>
        </div>

        <!-- Navigation Buttons -->
        <button class="tw-bg-opacity-80 tw-absolute tw-left-0 tw-top-1/2 tw-flex tw-h-12 tw-w-12 tw-items-center tw-justify-center tw-rounded-r-full tw-bg-gray-800 tw-text-lg tw-font-bold tw-text-white tw-transition tw-duration-500 tw-ease-in tw--mt-10 hover:tw-bg-opacity-100" onclick="plusSlides(-1)">&#10094;</button>
        <button class="tw-bg-opacity-80 tw-absolute tw-right-0 tw-top-1/2 tw-flex tw-h-12 tw-w-12 tw-items-center tw-justify-center tw-rounded-l-full tw-bg-gray-800 tw-text-lg tw-font-bold tw-text-white tw-transition tw-duration-500 tw-ease-in tw--mt-10 hover:tw-bg-opacity-100" onclick="plusSlides(1)">&#10095;</button>
    </div>

    <!-- Dots -->
    <div class="tw-text-center tw-mt-4">
        <span class="dot tw-mx-1 tw-inline-block tw-h-3 tw-w-3 tw-cursor-pointer tw-rounded-full tw-bg-gray-400 tw-transition tw-duration-500 tw-ease-in-out" onclick="currentSlide(1)"></span>
        <span class="dot tw-mx-1 tw-inline-block tw-h-3 tw-w-3 tw-cursor-pointer tw-rounded-full tw-bg-gray-400 tw-transition tw-duration-500 tw-ease-in-out" onclick="currentSlide(2)"></span>
        <span class="dot tw-mx-1 tw-inline-block tw-h-3 tw-w-3 tw-cursor-pointer tw-rounded-full tw-bg-gray-400 tw-transition tw-duration-500 tw-ease-in-out" onclick="currentSlide(3)"></span>
    </div>

</div>
@section Scripts {
    <script src="~/js/carousel.js"></script>
}